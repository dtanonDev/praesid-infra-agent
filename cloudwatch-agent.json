{
  "agent": {
    "metrics_collection_interval": 60,
    "run_as_user": "root"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/home/praesid/.pm2/logs/praesid-infra-agent-out.log",
            "log_group_name": "praesid/infra-agent",
            "log_stream_name": "{instance_id}/stdout",
            "timezone": "UTC"
          },
          {
            "file_path": "/home/praesid/.pm2/logs/praesid-infra-agent-error.log",
            "log_group_name": "praesid/infra-agent",
            "log_stream_name": "{instance_id}/stderr",
            "timezone": "UTC"
          }
        ]
      }
    },
    "log_stream_name": "{instance_id}"
  },
  "metrics": {
    "metrics_collected": {
      "procstat": [
        {
          "measurements": [
            "cpu_usage",
            "memory_resident",
            "memory_utilization"
          ],
          "pid_file": "/home/praesid/.pm2/pids/praesid-infra-agent-0.pid"
        }
      ],
      "statsd": {
        "service_address": ":8125",
        "metrics_collection_interval": 60
      }
    },
    "append_dimensions": {
      "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
      "InstanceId": "${aws:InstanceId}"
    },
    "aggregation_dimensions": [
      [
        "InstanceId"
      ]
    ],
    "namespace": "Praesid/InfraAgent"
  }
}
